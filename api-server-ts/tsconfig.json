{
    "compilerOptions": {
        "outDir": "build",
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2015",
        "types": ["reflect-metadata"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": ["es6", "dom"],
        "allowUnreachableCode": true
    },
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}